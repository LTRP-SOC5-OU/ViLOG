{
  "name": "chibichilo-server",
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/npocccties/chibichilo",
    "directory": "server"
  },
  "scripts": {
    "test": "jest",
    "dev": "run-p dev:*",
    "dev:app": "tsup index.ts --watch --onSuccess 'node dist/index.js | pino-pretty'",
    "dev:db": "run-s build:prisma migrate seed",
    "build": "run-s build:prisma build:app",
    "build:app": "tsup index.ts",
    "build:prisma": "prisma generate",
    "migrate": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --skip-seed",
    "seed": "prisma db seed",
    "zoom:import": "node -r esbuild-register utils/zoom/importCli.ts",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "prisma": {
    "seed": "node -r esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/swagger": "^7.4.1",
    "@prisma/client": "^4.1.1",
    "node-ssh": "^12.0.0"
  },
  "devDependencies": {
    "@fastify/auth": "^3.0.2",
    "@fastify/cookie": "^7.3.1",
    "@fastify/cors": "^8.1.0",
    "@fastify/formbody": "^7.0.1",
    "@fastify/helmet": "^9.1.0",
    "@fastify/session": "^9.0.0",
    "@quixo3/prisma-session-store": "^3.1.8",
    "@types/dateformat": "^3.0.1",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node-schedule": "^1.3.2",
    "@types/serve-handler": "^6.1.1",
    "@types/spdx-expression-parse": "^3.0.1",
    "@types/strict-uri-encode": "^2.0.0",
    "@types/unzipper": "^0.10.4",
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^3.1.0",
    "date-fns": "^2.23.0",
    "date-fns-tz": "^1.1.6",
    "esbuild-register": "^3.3.3",
    "express-session": "^1.17.2",
    "fastify": "^4.3.0",
    "got": "^11.8.2",
    "jest": "^27.1.0",
    "json-schema-to-ts": "^1.6.4",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^3.0.0",
    "node-interval-tree": "^1.3.3",
    "node-schedule": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "openid-client": "^4.7.5",
    "outdent": "^0.8.0",
    "pino-pretty": "^6.0.0",
    "prisma": "^4.1.1",
    "recursive-readdir-synchronous": "^0.0.4",
    "search-query-parser": "^1.6.0",
    "serve-handler": "^6.1.3",
    "spdx-expression-parse": "^3.0.1",
    "strict-uri-encode": "^2.0.0",
    "ts-jest": "^27.0.5",
    "tsup": "^6.2.1",
    "unzipper": "^0.10.11",
    "webpack": "^5.51.1",
    "yn": "^4.0.0"
  }
}
